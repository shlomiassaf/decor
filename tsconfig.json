{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": [ "es5", "es6", "scripthost"],
    "outDir": "dist/",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts"
  ]
}